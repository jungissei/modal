{
  "name": "modal",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "build:sass": "npx sass src:dist  --style compressed",
    "build:ts": "tsc",
    "build:ejs": "npx ejs-cli -b src/ '**/*.ejs' -e 'inc/' -o dist/",
    "build": "npm run build:sass && npm run build:ts && npm run build:ejs",
    "watch:sass": "chokidar 'src/**/*.scss' -c 'npm run build:sass'",
    "watch:ts": "chokidar 'src/**/*.ts' -c 'npm run build:ts'",
    "watch:ejs": "chokidar 'src/**/*.ejs' -c 'npm run build:ejs'",
    "watch": "npm run build && concurrently \"npm run watch:sass\" \"npm run watch:ts\" \"npm run watch:ejs\"",
    "serve": "browser-sync start --server 'dist' --files 'dist/**/*'",
    "dev": "concurrently \"npm run watch\" \"npm run serve\"",
    "lint:markuplint": "markuplint \"./dist/**/*.html\"",
    "lint:css": "stylelint \"./dist/**/*.css\"",
    "lint:scss": "stylelint \"./src/**/*.scss\"",
    "lint:ts": "eslint \"./src/**/*.ts\"",
    "lint": "npm run lint:markuplint && npm run lint:css && npm run lint:scss && npm run lint:ts",
    "test:playwright": "playwright test --config=playwright.config.ts",
    "test": "npm run lint && npm run test:playwright"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@eslint/js": "^9.27.0",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.21",
    "browser-sync": "^3.0.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "ejs": "^3.1.10",
    "ejs-cli": "^2.2.3",
    "eslint": "^9.27.0",
    "globals": "^16.2.0",
    "markuplint": "^4.12.0",
    "playwright": "^1.52.0",
    "sass": "^1.89.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
